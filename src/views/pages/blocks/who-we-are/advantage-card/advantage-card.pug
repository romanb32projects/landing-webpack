mixin advantageCard({ icon, title })
	.swiper-slide.bg-primary-brightest.p-10.rounded-lg.h-full
		.bg-white.overflow-hidden.rounded-full.w-28.h-28.mx-auto.mb-6.flex.items-center.justify-center
			img(src=require(`@/assets/icons/who-we-are/${icon}.svg`))

		p.font-notoSans.text-dark.font-bold.text-base.text-center.italic.uppercase
			| #{ title }
