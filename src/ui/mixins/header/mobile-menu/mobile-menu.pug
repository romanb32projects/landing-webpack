#mobile-menu.hidden(class='lg:hidden', role='dialog', aria-modal='true')
	.fixed.inset-0.z-10
	.fixed.inset-y-0.right-0.z-10.flex.flex-col.w-full.overflow-y-auto.bg-dark.px-4.py-6(
		class='sm:max-w-sm sm:ring-1 sm:ring-gray-900/10'
	)
		.flex.items-center.justify-between
			div(class='md:hidden')
				+logo

			+menuItem(langItem, 'italic')

			button#close-btn.rounded-md.text-white(type='button', class='-m-2.5 p-2.5')
				span.sr-only Close menu
				svg.h-6.w-6(fill='none', viewbox='0 0 24 24', stroke-width='1.5', stroke='currentColor', aria-hidden='true')
					path(stroke-linecap='round', stroke-linejoin='round', d='M6 18L18 6M6 6l12 12')

		.flow-root.grow
			.flex.flex-col.h-full.justify-between
				.space-y-2.py-6.divide-y.divide-dark-grizzly
					each item in menuItems
						+menuItemMobile(item)

				a.mx-auto.flex.items-center(href='#')
					+button({ icon: 'profile.svg' })

					.block.rounded-lg.px-3.text-sm.font-bold.text-white.uppercase(class='py-2.5') Log in / Sign up
