mixin menuItemMobile(item)
	- let isHasChildren = Boolean(item.children && item.children.length)

	if (isHasChildren)
		.-mx-3.pt-2.group
			button.flex.w-full.items-center.justify-between.rounded-lg.py-2.pl-3.text-base.font-semibold.leading-7.text-white(
				type='button',
				class='pr-3.5 hover:bg-white hover:text-dark',
				aria-controls='disclosure-1',
				aria-expanded='false'
			)
				| #{ item.name }

				svg.h-5.w-5.flex-none.duration-200(
					class='group-hover:rotate-180',
					viewbox='0 0 20 20',
					fill='currentColor',
					aria-hidden='true'
				)
					path(
						fill-rule='evenodd',
						d='M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z',
						clip-rule='evenodd'
					)

			// 'Product' sub-menu, show/hide based on menu state.
			#disclosure-1.mt-2.space-y-2.hidden(class='group-hover:block')
				each children in item.children
					a.block.rounded-lg.py-2.pl-6.pr-3.text-sm.font-semibold.leading-7.text-white(
						href='#',
						class='hover:bg-white hover:text-dark'
					)
						| #{ children.name }

	else
		.-mx-3.pt-2
			a.block.rounded-lg.px-3.py-2.text-base.font-semibold.leading-7.text-white(href='#', class='hover:bg-white hover:text-dark')
				| #{ item.name }
