mixin moreBlock(text, background = 'white-light', modificator = '')
	.flex.items-center.cursor-pointer
		if (text)
			span.hidden.text-sm.font-bold.italic.uppercase(class='md:inline-block md:mr-3') #{ text }

		.more-arrow.w-6.h-6.rounded-full.flex.items-center.justify-center(class=`bg-${background} ${modificator}`)
			+arrow
