mixin sliderBullets(items = [], isOnlyMobile = true)
	.bullets.flex.justify-center.gap-x-3(data-glide-el='controls[nav]', class=isOnlyMobile && 'lg:hidden')
		each item, index in items
			.group(data-glide-dir=`=${index}`)
				button.w-3.h-3.rounded-full.duration-200.bg-primary-brightest(class='hover:bg-primary group-[.nav-active]:bg-primary')
