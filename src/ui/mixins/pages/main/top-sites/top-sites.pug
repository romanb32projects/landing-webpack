mixin topSites(containerClass)
	- let cards = [1, 2, 3, 4]

	div(class=containerClass)
		.py-10(class='sm:py-20')
			.flex.justify-between.items-center
				h2.text-base.font-black.italic.text-dark.uppercase(class='lg:text-2xl') Top sports betting sites

				.text-grizzly-dark
					+moreBlock({ text: 'View All Bookies' })

			#sites-cards.relative
				.mb-6.pt-11.overflow-hidden(data-glide-el='track')
					.flex
						each card in cards
							if (card === 1)
								+card({ index: card, primaryFlag: 'top-sites/crown' })
							else
								+card({ index: card })

				+sliderArrows('top-48')
				+sliderBullets(cards, false)
